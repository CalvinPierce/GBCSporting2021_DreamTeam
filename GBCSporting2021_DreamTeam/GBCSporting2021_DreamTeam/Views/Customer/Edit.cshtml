@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="FirstName">First Name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="LastName">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Address">Address</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="City">City</label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="State">State</label>
        <div class="col-sm-10">
            <input asp-for="State" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="PostalCode">Postal Code</label>
        <div class="col-sm-10">
            <input asp-for="PostalCode" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="CountryId">Country</label>
        <div class="col-sm-10">
            <select asp-for="CountryId" class="form-control">
                <option value="">Country</option>
                @foreach (Country c in ViewBag.Country)
                {
                    <option value="@c.CountryId">@c.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Phone">Phone</label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control">
        </div>
    </div>

    <input type="hidden" asp-for="CustomerId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
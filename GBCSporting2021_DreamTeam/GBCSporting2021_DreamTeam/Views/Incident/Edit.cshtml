@model IncidentEditViewModel
@{
    string title = ViewBag.Action + " Incident";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Incident.CustomerId">Customer</label>
        <select asp-for="Incident.CustomerId" class="form-control">
            <option value=""></option>
            @foreach (Customer c in Model.Customers)
            {
                <option value="@c.CustomerId">@c.FullName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Incident.ProductId">Product</label>
        <select asp-for="Incident.ProductId" class="form-control">
            <option value=""></option>
            @foreach (Products p in Model.Products)
            {
                <option value="@p.ProductId">@p.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Incident.Title">Title</label>
        <input asp-for="Incident.Title" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.Description">Description</label>
        <input asp-for="Incident.Description" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.TechnicianId">Technician</label>
        <select asp-for="Incident.TechnicianId" class="form-control">
            <option value=""></option>
            @foreach (Technician t in Model.Technicians)
            {
                <option value="@t.TechnicianId">@t.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Incident.Open">Date Opened</label>
        <input asp-for="Incident.Open" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.Close">Date Closed</label>
        <input asp-for="Incident.Close" class="form-control">
    </div>

    <input type="hidden" asp-for="Incident.IncidentId"/>

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Incident" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
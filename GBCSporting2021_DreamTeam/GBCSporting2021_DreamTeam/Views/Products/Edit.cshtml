@model Products
@{
    string title = ViewBag.Action + " Products";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate">Release</label>
        <input asp-for="ReleaseDate" class="form-control">
    </div>

    <input type="hidden" asp-for="ProductId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>